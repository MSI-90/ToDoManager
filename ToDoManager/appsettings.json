{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/text/TaskManagerLog-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/json/TaskManagerLog-.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "sqlConnection": "Host=localhost;Port=5432;Username=postgres; Password='1108'; Database=TaskManager"
  },
  "Secret": {
    "Key": "YOUR_GREAT_KEY_ABSOLUT_PROTECTED"
  },
  "JwtSettings": {
    "ValidIssuer": "GoodNews",
    "ValidAudience": "https://localhost:7014",
    "Expires": 3
  },
  "RefreshSettings": {
    "Expires":  7
  },
  "AllowedHosts": "*"
}
